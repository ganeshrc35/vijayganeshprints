<!doctype html>
<html lang="en">
    <%- include ../partials/header.ejs %>
    <body>
        <%- include ../partials/menu.ejs %>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <label>Create Order - <%= customer.company_name %></label>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-body">
                        <% if (typeof messages != 'undefined' && messages) { %>
                        <div class="alert alert-success"><%- messages %></div>
                        <% } %>
                        <form action="/orders/create" method="post" enctype="application/x-www-form-urlencoded">
                            <div class="form-group">
                                <input type="number" class="form-control" name="no_of_copies" placeholder="No of Copies" required="required" autocomplete="false">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Contact Number" required="required" autocomplete="false" name="contact_number">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="content"></textarea>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Create Order</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <%- include ../partials/scripts.ejs %>
</html>